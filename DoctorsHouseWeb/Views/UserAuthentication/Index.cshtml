@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
    </tr>
    @for(int i = 0; i < Model.Rows.Count; i++)
    {
<tr>
    <td>@Model.Rows[i][1]</td>
    <td>@Model.Rows[i][2]</td>
    <td>@Html.ActionLink("Edit Student", "Edit", new { id = Model.Rows[i][0] })</td>
    <td>@Html.ActionLink("Delete Student", "Edit", new { id = Model.Rows[i][1] })</td>
</tr>
    }
</table>

